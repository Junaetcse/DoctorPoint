<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:background="#566fd2"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.example.junae.doctorpointnew.cardiologyest.CardioDepartment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cardiology Department"
        android:textColor="#f9f3f3"
        android:textSize="25sp"
        android:padding="5dp"
        android:background="#383636"
        android:gravity="center"
        android:textStyle="italic"
        />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardio_recyclerView"
            android:scrollbars="vertical"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>